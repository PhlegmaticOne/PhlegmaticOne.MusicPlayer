<UserControl x:Class="PhlegmaticOne.MusicPlayer.UI.WPF.Controls.ViewLink"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhlegmaticOne.MusicPlayer.UI.WPF.Controls"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:views="clr-namespace:PhlegmaticOne.MusicPlayer.UI.WPF.Views"
             x:Name="AlbumLinkRoot"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="AlbumLinkStyle">
            <Style.Triggers>
                <Trigger Property="TextBlock.IsMouseOver" Value="True">
                    <Setter Property="TextBlock.Foreground" Value="{Binding ForegroundHover, ElementName=AlbumLinkRoot}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <TextBlock Text="{Binding LinkText, ElementName=AlbumLinkRoot}" Style="{StaticResource AlbumLinkStyle}"/>
</UserControl>
