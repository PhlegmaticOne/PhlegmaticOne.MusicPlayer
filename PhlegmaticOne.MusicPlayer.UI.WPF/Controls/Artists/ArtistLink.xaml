<UserControl x:Class="PhlegmaticOne.MusicPlayer.UI.WPF.Controls.Artists.ArtistLink"
             x:Name="ArtistLinkControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhlegmaticOne.MusicPlayer.UI.WPF.Controls.Artists"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:views="clr-namespace:PhlegmaticOne.MusicPlayer.UI.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Button Background="Transparent" BorderThickness="0" BorderBrush="Transparent"
            Command="{Binding NavigateToArtistCommand}">
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <TextBlock Name="ArtistName" Text="{Binding ArtistName}"/>
                <ControlTemplate.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter TargetName="ArtistName" Property="Foreground" Value="{Binding HoverColor, ElementName=ArtistLinkControl}"/>
                    </Trigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
        </Button.Template>
    </Button>
</UserControl>
