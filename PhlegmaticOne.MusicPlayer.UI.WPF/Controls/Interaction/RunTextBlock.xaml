<UserControl x:Class="PhlegmaticOne.MusicPlayer.UI.WPF.Controls.RunTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhlegmaticOne.MusicPlayer.UI.WPF.Controls"
             mc:Ignorable="d" 
             x:Name="RunTextBlockRoot"
             d:DesignHeight="450" d:DesignWidth="800">

    <Canvas ClipToBounds="True" Height="{Binding Height, ElementName=RunTextBlockRoot}"
            Name="TextCanvas">
        <TextBlock Name="Block" 
                   Text="{Binding Text, ElementName=RunTextBlockRoot}"
                   Foreground="{Binding Foreground, ElementName=RunTextBlockRoot}"
                   FontSize="{Binding FontSize, ElementName=RunTextBlockRoot}"
                   FontFamily="{Binding FontFamily, ElementName=RunTextBlockRoot}"
                   FontWeight="{Binding FontWeight, ElementName=RunTextBlockRoot}"/>
    </Canvas>
</UserControl>
